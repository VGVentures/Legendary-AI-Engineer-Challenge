{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { 
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
          "Access-Control-Allow-Headers": "Content-Type, Authorization"
        }
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend/$1"
      }
    ]
  } 